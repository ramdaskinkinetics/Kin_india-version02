# Gemfile

# Use the official Jekyll gem
gem "jekyll", "~> 4.2"

# Bundler ensures you are using the correct gem versions
gem "bundler", "~> 2.0"

# Optional: SEO plugin for adding SEO metadata to pages
gem "jekyll-seo-tag", "~> 2.7"

# Optional: RSS feed generation plugin
gem "jekyll-feed", "~> 0.15"

# Optional: Sitemap generation plugin
gem "jekyll-sitemap", "~> 1.0"

# Optional: Markdown processing plugin (if you want a different processor)
gem "kramdown", "~> 2.3"

# If you need to use Sass for styling
gem "sassc", "~> 2.4"

# Optional: If you want to add a specific theme
# gem "minima", "~> 2.5"
